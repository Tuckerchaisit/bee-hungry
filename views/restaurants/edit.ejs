<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" value="<%= restaurant.name %>" id="name-input">
    <label for="price-range-select">Price Range:</label>
    <select name="priceRange" value="<%= restaurant.priceRange %>" id="price-range-select">
      <option value="$">$</option>
      <option value="$$">$$</option>
      <option value="$$$">$$$</option>
      <option value="$$$$">$$$$</option>
    </select>
    <label for="address-input">Address:</label>
    <input type="text" name="address" value="<%= restaurant.address %>" id="address-input">
    <label for="cuisine-input">Cuisine:</label>
    <input type="text" name="cuisine" value="<%= restaurant.cuisine %>" id="cuisine-input">
    <label for="visited-checkbox">Visited:</label>
    <input type="checkbox" name="visited" <%= restaurant.visit ? 'checked' : '' %> id="visited-checkbox">
    <button type="submit">Save Restaurant</button>
  </form>
</main>

<%- include('../partials/footer') %>





