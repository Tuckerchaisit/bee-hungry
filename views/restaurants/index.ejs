<%- include('../partials/html-head') %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <link rel="stylesheet" href="/stylesheets/restaurants/index.css" />
  <%- include('../partials/nav') %>

    <main>
      <h1>
        <%= title %>
      </h1>
      <section id="card-container" class="animate__animated">
        <% restaurants.forEach((restaurant)=> { %>
          <div class="card-base" id="restaurant-layout">
            <small class="delete-btn">
              <% if (restaurant.owner.equals(user?.profile._id)) { %>
                <form action="/restaurants/<%= restaurant._id %>?_method=DELETE" method="POST" class="card-link">
                  <button class="dlt-btn">X</button>
                  <% } %>
                </form>
            </small>
            <img class="restaurant-bg" src="/images/etc/beeBG.png" alt="..." width="350" height="300">
            <h1 class="card-title">
              <%= restaurant.name %>
            </h1>
            <h2 class="card-text">
              <%= restaurant.address %>
            </h2>
            <h3 class="card-text">
              <%= restaurant.priceRange %>
            </h3>
            <% if (user) { %>
            <h4 class="card-detail">
              <a href="/restaurants/<%= restaurant._id %>"><button class="detail-btn">See More</button></a>
            </h4>
            <% } %>
          </div>
          <% }) %>
      </section>


    </main>

    <%- include('../partials/footer') %>