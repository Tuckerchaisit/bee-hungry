<%- include('../partials/html-head') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
      <% restaurants.forEach((restaurant) => { %>
        <div class="col" style="width: 18rem">
          <div class="card h-100">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
              <h2 class="card-title"><%= restaurant.name %></h2>
              <h5 class="card-text"><%= restaurant.address %></h5>
              <h5 class="card-text"><%= restaurant.priceRange %></h5>
            </div>
            <div class="card-footer">
              <small class="text-muted">
                <a href="/restaurants/<%= restaurant._id %>" class="card-link">DETAILS</a>
              </small>
              <small class="text-muted">
                <form action="/restaurants/<%= restaurant._id %>?_method=DELETE" method="POST" class="card-link">
                  <button>DELETE</button>
                </form>
              </small>
            </div> 
          </div>    
        </div>  
        <% }) %>  
  </div>

      
</main>

  <%- include('../partials/footer') %>