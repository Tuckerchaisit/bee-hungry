<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/restaurants" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input">
    <label for="price-range-select">Price Range:</label>
    <select name="priceRange" id="price-range-select">
      <option value="$">$</option>
      <option value="$$">$$</option>
      <option value="$$$">$$$</option>
      <option value="$$$$">$$$$</option>
    </select>
    <label for="address-input">Address:</label>
    <input type="text" name="address" id="address-input">
    <label for="cuisine-input">Cuisine:</label>
    <input type="text" name="cuisine" id="cuisine-input">
    <label for="visited-checkbox">Visited:</label>
    <input type="checkbox" name="visited" checked id="visited-checkbox">
    <button type="submit">Add Restaurant</button>
  </form>
</main>

<%- include("../partials/footer") %>
